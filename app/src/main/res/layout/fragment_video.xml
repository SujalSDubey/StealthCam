<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/videoLay"
    tools:context=".Activities.VideoFragment">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/videoRc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:listitem="@layout/photo_content"
        android:layout_margin="@dimen/fifteen_dp"></androidx.recyclerview.widget.RecyclerView>

    <TextView
        android:id="@+id/txtNoData"
        android:visibility="gone"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:layout_weight="1"
        android:fontFamily="@font/abel"
        android:text="No Videos To Show"
        android:textColor="@color/white"
        android:textSize="@dimen/twentyfour"
        android:textStyle="bold" />


</RelativeLayout>